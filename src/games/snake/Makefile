GPP		=	g++

NAME	=	lib_arcade_snake.so

COMMON	=	../../

GAME_COMMON	=	../common/

SRC		=	$(COMMON)Color.cpp \
				$(GAME_COMMON)Component.cpp \
				$(GAME_COMMON)GUI.cpp \
				$(GAME_COMMON)Tile.cpp \
				Food.cpp \
				SnakeGame.cpp \
				Map.cpp	\
				SnakePart.cpp

GAMESDIR	=	../../../games/

OBJ 	    =	$(SRC:.cpp=.o)

CXXFLAGS    =   -std=c++14

CXXFLAGS    +=  -W -Wall -Wextra -fPIC

CXXFLAGS    +=  -I../../../includes/common \
				-I../../../includes \
				-I../../../includes/games/common \
				-I../../../includes/games/snake

LDFLAGS			=	-shared

$(NAME):	$(OBJ)
		    $(GPP) -o $(NAME) $(OBJ) $(LDFLAGS)
				mv $(NAME) $(GAMESDIR)

all:		$(NAME)

clean:
				$(RM)	$(OBJ)

fclean:	clean
				$(RM) $(GAMESDIR)$(NAME)

re:			fclean all
